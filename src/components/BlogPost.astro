---
const { title, url, date, author, description } = Astro.props;
---

<style>
  .post-title-container {
    display: flex;
  }

  .list-disc {
    list-style-type: none;

    flex-direction: row;
    align-items: flex-start;
  }
  a {
    font-size: 2rem;
    color: #d08770;
    font-weight: bold;
  }

  .date-author {
    font-style: oblique;
    color: #81a1c1;
  }

  .description {
    color: #b48ead;
  }

  .post-title-container li a {
    color: #81a1c1;
  }
</style>
<ul class="post-title-container">
  <li class="list-disc">
    <a href={url}>{title}</a>
    <hr class="solid" />
    <!-- <hr class="dashed" /> -->

    <p class="date-author">{date} {author}</p>
    <p class="description">{description}</p>
  </li>
</ul>
<br />
